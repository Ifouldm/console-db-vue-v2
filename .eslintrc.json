{
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    },
    "extends": ["plugin:vue/essential", "@vue/typescript", "prettier"],
    "globals": {
        "firebase": "readonly",
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["vue"],
    "rules": {
        "no-console": "off",
        "no-underscore-dangle": "off",
        "no-param-reassign": "off"
    }
}
